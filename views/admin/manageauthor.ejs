<%- include('../partials/header2.ejs') %>
<!-- MENU SECTION END-->
    <div class="content-wrapper">
         <div class="container">
        <div class="row pad-botm">
            <div class="col-md-12">
                <h4 class="header-line">Manage Authors</h4>
            </div>
     
            <div class="row">
                <div class="col-md-12">
                    <!-- Advanced Tables -->
                    <div class="panel panel-default">
                        <div class="panel-heading">
                           Authors Listing
                        </div>
                        <div class="panel-body">
                            <div class="table-responsive">
                                <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                                    <thead>
                                        <tr>
                                            <th>#</th>
                                            <th>Author</th>
                                         
                                            <th>Creation Date</th>
                                            <th>Updation Date</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% results.forEach(function(result){ %>
                                        <tr class="odd gradeX">
                                            <td class="center"><%= count++%></td>
                                            <td class="center"><%= result.AuthorName%></td>
                                            <td class="center"><%=result.creationDate.toLocaleDateString() %></td>
                                            <td class="center"><%=result.UpdationDate %></td>
                                            <td class="center">

                                            <a href="/admin/editauthor/<%=result.id%>"><button class="btn btn-primary"><i class="fa fa-edit "></i> Edit</button> 
                                                <form id="delete-form" action="/admin/deleteauthor/<%= result.id%>" method="POST">  <button class="btn btn-danger"></i> Delete</button>
                                                </form>
                                            </td>
                                        </tr>     
                                        <%});%>                             
                                    </tbody>
                                </table>
                            </div>
                            
                        </div>
                    </div>
                    <!--End Advanced Tables -->
                </div>
            </div>


            
    </div>
    </div>

     <!-- CONTENT-WRAPPER SECTION END-->
     <%- include('../partials/footer2.ejs') %>
    
</body>
</html>
