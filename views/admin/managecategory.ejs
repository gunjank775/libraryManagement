<%- include('../partials/header2.ejs') %>
    <div class="content-wrapper">
         <div class="container">
        <div class="row pad-botm">
            <div class="col-md-12">
                <h4 class="header-line">Manage Categories</h4>
             </div>

            <div class="row">
                <div class="col-md-12">
                    <!-- Advanced Tables -->
                    <div class="panel panel-default">
                        <div class="panel-heading">
                           Categories Listing
                        </div>
                        <div class="panel-body">
                            <div class="table-responsive">
                                <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                                    <thead>
                                        <tr>
                                            <th>#</th>
                                            <th>Category</th>
                                            <th>Status</th>
                                            <th>Creation Date</th>
                                            <th>Updation Date</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% results.forEach(function(result){ %>
                                        <tr>
                                            <td><%= count++ %></td>
                                            <td><%= result.CategoryName %></td>
                                            <td class="center"><% if(result.Status==1) { %>
                                                <a href="#" class="btn btn-success btn-xs">Active</a>
                                                <%  } else { %>
                                                <a href="#" class="btn btn-danger btn-xs">Inactive</a>
                                                <% } %></td>
                                            <td><%= result.CreationDate.toLocaleDateString() %></td>
                                            <td> <%= result.UpdationDate %></td>
                                            <td>
                                                <a href="/admin/editcategory/<%=result.id%>"><button class="btn btn-primary"><i class="fa fa-edit "></i> Edit</button> 
                                                    <form id="delete-form" action="/admin/deletecategory/<%= result.id%>" method="POST">  <button class="btn btn-danger"></i> Delete</button>
                                                    </form>
                                            </td>
                                        </tr>
                                        <%});%> 
                                    </tbody>
                             
                                </table>
                            </div>
                            
                        </div>
                    </div>
                </div>
            </div>


            
    </div>
    </div>

     <!-- CONTENT-WRAPPER SECTION END-->
     <%- include('../partials/footer2.ejs') %>
</body>
</html>
